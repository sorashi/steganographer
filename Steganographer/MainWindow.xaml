<Window x:Class="Steganographer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Steganographer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <TabControl>
            <TabItem Header="Encode">
                <local:MessageHiderView></local:MessageHiderView>
            </TabItem>
            <TabItem Header="Decode">
                <local:MessageRecoverView></local:MessageRecoverView>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
